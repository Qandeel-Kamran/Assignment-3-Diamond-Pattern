x = 5

# Top half of the diamond
for i in range(1, 6):
    for q in range(1, x + 1):
        print(" ", end="")
    for j in range(1, i + 1):
        print("*", end=" ")
    print()
    x = x - 1

# Bottom half of the diamond
x = 1
for i in range(5, 0, -1):
    for q in range(1, x + 1):
        print(" ", end="")
    for j in range(1, i + 1):
        print("*", end=" ")
    print()
    x = x + 1
